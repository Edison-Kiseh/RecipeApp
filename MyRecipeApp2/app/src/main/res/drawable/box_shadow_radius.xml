<?xml version="1.0" encoding="utf-8"?>
<!-- shadow_bg.xml -->
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <solid android:color="@android:color/white" /> <!-- Background color -->
    <corners android:radius="8dp" /> <!-- Adjust the corner radius as needed -->
    <padding android:left="4dp" android:top="4dp" android:right="4dp" android:bottom="4dp" /> <!-- Adjust the padding to control the shadow size -->
    <stroke android:color="@android:color/transparent" android:width="1dp" /> <!-- Transparent stroke -->
</shape>
